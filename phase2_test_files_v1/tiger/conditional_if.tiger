/* Test: if stmt */

program conditional_if
let
begin

    function main() : int
    begin
        let
            var a : int := 1;
        begin
            if a > 0 then
                printi(1);
            endif;

            if a > 1 then
                printi(2);
            endif;

            if a > 2 then
                printi(3);
            endif;


            if a < 0 then
                printi(4);
            endif;

            if a < 1 then
                printi(5);
            endif;

            if a < 2 then
                printi(6);
            endif;


            if a >= 0 then
                printi(7);
            endif;

            if a >= 1 then
                printi(8);
            endif;

            if a >= 2 then
                printi(9);
            endif;


            if a <= 0 then
                printi(10);
            endif;

            if a <= 1 then
                printi(11);
            endif;

            if a <= 2 then
                printi(12);
            endif;


            if a == 0 then
                printi(13);
            endif;

            if a == 1 then
                printi(14);
            endif;


            if a != 0 then
                printi(15);
            endif;

            if a != 1 then
                printi(16);
            endif;

        end
        return 0;
    end

end
