/* Test: basic float arithmetic operators */

program float_math
let
begin

    function main () : int
    begin
        let
            var a, b : float := 5.0;
            var c : float;
        begin
            c := 200.0 + 100.0;
            printf(c);

            c := a + 50.0;
            printf(c);

            c := a + b;
            printf(c);

            c := 200.0 - 100.0;
            printf(c);

            c := a - 50.0;
            printf(c);

            c := a - b;
            printf(c);

            c := 200.0 * 100.0;
            printf(c);

            c := a * 50.0;
            printf(c);

            c := a * b;
            printf(c);

            c := 200.0 / 100.0;
            printf(c);

            c := a / 1.0;
            printf(c);

            c := a / b;
            printf(c);
        end
        return 0;
    end

end
